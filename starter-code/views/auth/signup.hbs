<div class="signUpLogin">
  <h4 class=" had-container loginBox truncate bg-card-user center">
    <img src="../images/logoFaceCoins.png" alt="" class="circle responsive-img">
    <div class="row loginBox ">
      <form class="col s12 formLogin" action="/auth/signup" method="POST">
        <div class="row">
          <div class="input-field col m12 s12">
            <label for="username">Username</label>
            <input id="username" type="text" name="username">
          </div>
        </div>
        <div class="row">
          <div class="input-field col m12 s12">
            <label for="password">Password</label>
            <input id="password" type="password" name="password">
          </div>
        </div>
        <div class="row">
          <div class="input-field col m12 s12">
            <label for="email">Email</label>
            <input id="email" type="email" name="email">
          </div>
        </div>
        <div class="row center-button">
          <button class="btn waves-effect waves-light buttons-login-width" type="submit" name="action">Sign Up</button>
        </div>
        <div class="row center-button">
          <a href="/auth/login" class="btn waves-effect waves-light a-button buttons-login-width">Login</a>
        </div>
        {{#if message }}
        <div class="error-message">{{ message }}</div>
        {{/if}}
      </form>
    </div>
  </h4>
</div>
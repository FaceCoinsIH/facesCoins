        <li style="border: 4px solid white">
            <img src="{{this.image}}" alt="" uk-cover>
            <div class="image-gradient">
                 <p>{{this.name}}</p>
            </div>
            
        </li>
        <li style="border: 4px solid black;background-color:gray">
           
                <div class="events-location">
                    {{this.city}}, {{this.country}} <br>{{this.address}}
                   
                </div>

